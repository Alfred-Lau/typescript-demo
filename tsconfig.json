{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    // implicitly has an 'any' type.
    // "noImplicitAny": true,
    // "noUnusedLocals": true,
    "alwaysStrict": true,
    "target": "es5",
    "types": ["node"],
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}